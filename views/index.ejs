<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <title>My Vehicles</title>
</head>
<body class="container mt-5">
  <h1 class="mb-4">My Vehicles</h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Brand</th>
        <th>Model</th>
        <th>Year</th>
        <th>Miles</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% vehicles.forEach(vehicle => { %>
        <tr>
          <td><%= vehicle.brand %></td>
          <td><%= vehicle.model %></td>
          <td><%= vehicle.year %></td>
          <td>
            <form action="/update-miles/<%= vehicle.id %>" method="POST" class="d-inline">
              <input 
                type="number" 
                name="miles" 
                value="<%= vehicle.miles %>" 
                class="form-control form-control-sm d-inline w-auto" 
                required
              >
              <button type="submit" class="btn btn-primary btn-sm">Update</button>
            </form>
          </td>
          <td>
            <a href="/notes/<%= vehicle.id %>" class="btn btn-secondary btn-sm">View/Add Notes</a>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</body>
</html>
